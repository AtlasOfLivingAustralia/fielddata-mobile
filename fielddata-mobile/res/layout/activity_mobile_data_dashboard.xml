<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true" 
    android:background="@drawable/background_image_2">

    
   <ImageButton
        android:id="@+id/viewSavedRecordsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="14dip"
        android:layout_marginTop="25dip"
        android:clickable="false"
        android:contentDescription="@string/new_record"
        android:src="@drawable/saved_records_icon_1"
        android:background="@android:color/transparent" />
    
    <TextView
        android:id="@+id/noSavedRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewSavedRecordsButton"
        android:layout_alignLeft="@id/viewSavedRecordsButton"
        android:layout_marginBottom="15dip"
        android:text="@string/no_saved_records_message"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        android:id="@+id/hr1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@id/noSavedRecords"
        android:background="#66000000"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip" />

    <ImageButton
        android:id="@+id/newRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hr1"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dip"
        android:contentDescription="@string/new_record"
        android:src="@drawable/add_record_icon_1"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
       
        android:layout_below="@id/newRecordButton"
        android:layout_alignLeft="@id/newRecordButton"    
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dip"       
        android:text="@string/new_record"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />
    <View
        android:id="@+id/hr2"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        
        android:layout_below="@id/textView2"
        android:background="#66000000" />
    
    <ImageButton
        android:id="@+id/viewFieldGuideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hr2"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dip"
        android:contentDescription="@string/new_record"
        android:src="@drawable/search_species_icon"
        android:background="@android:color/transparent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewFieldGuideText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
       
        android:layout_below="@id/viewFieldGuideButton"
        android:layout_alignLeft="@id/viewFieldGuideButton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dip"   
        android:text="@string/view_field_guide"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView 
        android:id="@+id/status"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>
    
    <Spinner
        android:id="@+id/surveySelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/newRecordButton"
        android:layout_alignBottom="@id/newRecordButton"
        android:layout_marginLeft="15dp"
        
        />
</RelativeLayout>
